generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id         Int      @id @default(autoincrement())
  title      String
  coverUrl   String   @default("")
  finishedOn DateTime @default(now())
  authors    Author[] @relation("AuthorToBook")
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[] @relation("AuthorToBook")
}
